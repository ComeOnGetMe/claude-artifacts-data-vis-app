FROM python:3.11-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    gcc \
    postgresql-client \
    && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Copy only dependency files (these are needed for dependency installation)
COPY pyproject.toml uv.lock ./

# Install Python dependencies using uv
RUN uv sync

# Note: Application code will be mounted as a volume in docker-compose
# This allows for real-time changes without rebuilding the image

# Expose port
EXPOSE 8000

# Run the application with reload enabled
CMD ["uv", "run", "uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000", "--reload"]

