FROM node:20-alpine

WORKDIR /app

# Copy only package files (needed for dependency installation)
COPY package*.json ./

# Install dependencies
RUN npm install

# Note: Application code will be mounted as a volume in docker-compose
# This allows for real-time changes without rebuilding the image
# node_modules and .next are excluded via anonymous volumes in docker-compose

# Expose port
EXPOSE 3000

# Run the development server with hot reload
CMD ["npm", "run", "dev"]

